<h1>Add New Place</h1>

<%= form_with model: @place, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.submit "Save Place", class: "btn btn-primary" %>
    <%= link_to "Cancel", "/", class: "btn btn-secondary ms-2" %>
  </div>
<% end %>